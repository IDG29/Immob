{
    "description":"Format of a PELE control file",
    "type":"object",
    "additionalProperties" : false,
    "properties":{
        "controlFileSavingPath":{
            "type":"string"
        },
        "commandFilePath":{
            "type":"string"
        },
        "commandOutputFilePath":{
            "type":"string"
        },
        "simulationLogPath": {
            "type": "string"
        },
        "logFileType": {
            "type": "string"
        },
        "licenseDirectoryPath":{
        	"type":"string"
        },
        "verboseMode":{
            "type":"boolean",
            "required": false
        },
        "Initialization":{
            "type":"object",
            "required" : true,
	    "additionalProperties" : false,
            "properties" : {
                "useGPU" : {
                    "type" : "boolean"
                }, "ForceField": {
                    "type" : "string",
                    "enum" : ["OPLS2005",
                              "AMBER99",
                              "AMBER99sb",
                              "AMBER99sbBSC0",
                              "OpenFF",
                              "OpenFF-OPLS2005",
                              "OpenFF-AMBER99sbBSC0"],
                    "required" : true
                },
                "Complex" : @Complex@,
                "MultipleComplex" : {
                    "type" : "array",
                    "minItems" : 1,
                    "items" : @Complex@
                },
                "Solvent" : {
                    "type" : "object",
                    "additionalProperties" : false,
                    "properties" : {
                        "solventType" : {
                            "type" : "string",
                            "enum" : ["VDGBNP", "SGBNP", "VACUUM", "OBC"]
                        },
                        "useDebyeLength" : {
                            "type" : "boolean"
                        },
                        "ionicStrength" : {
                            "type" : "number"
                        }
                    }
                },
        		"fixTrees": {
        		    "type": "boolean"
        		},
        		"fixChainNames": {
        		    "type": "boolean"
        		},
        		"fixLinking": {
        		    "type": "boolean"
        		},
        		"allowMissingTerminals": {
        		    "type": "boolean"
        		},
        		"minSquaredLinkageDist": {
        		    "type": "number"
        		},
        		"atomsToVisit": {
        		    "type": "integer"
        		}
            }
        },
        "commands": {
            "type": "array",
            "required" : true,
            "minItems": 1,
            "items" : {
                "type" : "object"
            }
        }
    }
}
